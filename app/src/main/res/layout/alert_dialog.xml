<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alertDialogCardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/alertDialogConstraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient_color"
        android:padding="20dp">

        <TextView
            android:id="@+id/alertDialogFromTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/darkBlue"
            android:gravity="center"
            android:text="@string/from"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alertDialogToTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:background="@color/darkBlue"
            android:gravity="center"
            android:text="@string/to"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/alertDialogFromTV"
            app:layout_constraintTop_toTopOf="@id/alertDialogFromTV" />

        <TextView
            android:id="@+id/alertDialogFromDateTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/from_date_time"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/alertDialogFromTV"
            app:layout_constraintTop_toBottomOf="@id/alertDialogFromTV" />

        <TextView
            android:id="@+id/alertDialogToDateTimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_date_time"
            android:textColor="@color/darkBlue"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/alertDialogFromDateTimeTV"
            app:layout_constraintEnd_toEndOf="@+id/alertDialogToTV"
            app:layout_constraintStart_toStartOf="@+id/alertDialogToTV"
            app:layout_constraintTop_toTopOf="@+id/alertDialogFromDateTimeTV"
            tools:ignore="TextContrastCheck" />

        <RadioGroup
            android:id="@+id/alertDialogRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/alertDialogSaveBtn"
            app:layout_constraintEnd_toEndOf="@+id/alertDialogToDateTimeTV"
            app:layout_constraintStart_toStartOf="@+id/alertDialogFromDateTimeTV"
            app:layout_constraintTop_toBottomOf="@+id/alertDialogToDateTimeTV">

            <RadioButton
                android:id="@+id/alertDialogAlarmRadioButton"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/darkBlue"
                android:text="@string/alarm"
                android:textColor="@color/darkBlue"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/alertDialogNotificationRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:buttonTint="@color/darkBlue"
                android:text="@string/notification"
                android:textColor="@color/darkBlue"
                android:textSize="18sp"
                tools:ignore="TextContrastCheck" />

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alertDialogSaveBtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBlue"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="@+id/alertDialogRadioGroup"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="@+id/alertDialogRadioGroup" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>